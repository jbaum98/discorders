<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

    <%= form_for(@user, :html => {class: "form-horizontal"}) do |f| %>
    <%= render 'shared/error_messages_users' %>

    	<div class="control-group">
			<%= f.label :name, "Name:", class: "control-label"%>
			<div class="controls">
			<%= f.text_field :name, {placeholder: ''}%>
			</div>
			</div>

			<div class="control-group">
			<%= f.label :password, "Password:", class: "control-label"%>
			<div class="controls">
			<%= f.password_field :password, {placeholder: '' }%>
			</div>
			</div>

			<div class="control-group">
			<%= f.label :password_confirmation, "Confirmation:", class: "control-label"%>
			<div class="controls">
			<%= f.password_field :password_confirmation, {placeholder: '' }%>
			</div>
			</div>

      <div class="control-group"><div class="controls">
	<%= submit_tag("Create my account", {:class => "btn btn-primary"})%>
	</div></div>
    <% end %>
