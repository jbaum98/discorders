<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
		<%= f.label :name, "Username", class: "col-sm-1"%>
		<div class="col-sm-3">
			<%= f.text_field :name, {placeholder: '', class: 'form-control'}%>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :password, "Password", class: "col-sm-1"%>
		<div class="col-sm-3">
			<%= f.password_field :password, {placeholder: '', class: 'form-control' }%>
		</div>
	</div>

     <div class="form-group">
		<%= submit_tag("Sign in", {:class => "btn btn-primary col-sm-offset-1"})%>
		<p id = "new_user" >New user? <%= link_to "Sign up now", signup_path %> to receive a private database.</p>
	</div>
<% end %>
