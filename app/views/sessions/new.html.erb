<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>

    	<div class="control-group">
			<%= f.label :name, "Username", class: "control-label"%>
			<div class="controls">
			<%= f.text_field :name, {placeholder: ''}%>
			</div>
			</div>

			<div class="control-group">
			<%= f.label :password, "Password", class: "control-label"%>
			<div class="controls">
			<%= f.password_field :password, {placeholder: '' }%>
			</div>
			</div>

      <div class="control-group"><div class="controls">
	<%= submit_tag("Sign in", {:class => "btn btn-primary"})%>
	<p id = "new_user" >New user? <%= link_to "Sign up now", signup_path %> to receive a private database.</p>
	</div>
</div>
<% end %>
