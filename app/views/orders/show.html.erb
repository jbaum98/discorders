<% provide(:title, 'View Order') %>
<p id="notice"><%= notice %></p>

<dl class = 'dl-horizontal'>
  <dt>Name:</dt>
  <dd><%= @order.name %></dd>


  <dt>Bunk:</dt>
  <dd><%= @order.bunk %></dd>


  <dt>White:</dt>
  <dd><%= @order.white %></dd>


  <dt>Orange:</dt>
  <dd><%= @order.orange %></dd>


  <dt>Blue:</dt>
  <dd><%= @order.blue %></dd>

  <dt>Paid:</dt>
  <dd>
  <span id = "<%= unless @order.paid;'notpaid' else 'paid' end%>">
    <%= if @order.paid
          "$#{@order.price}"
        else
          "Not Paid ($#{@order.price})" end%>
  </span>
  </dd>


  <dt>Received:</dt>
  <dd>
  <span id = "<%= unless @order.received;'notpaid' else 'paid' end%>">
  <%= if @order.received 
        "ALREADY RECEIVED"
      else
        "Not Received" end%>
  </span>
  <%old_params = params || {}%>
  <%= link_to "change", order_path(@order, :order => { :received => !@order.received}, :old_params => old_params), :method => :put%>
</dd>

</dl>


<%= link_to 'Edit', edit_order_path(@order) %>
<%= link_to 'Back', root_path %>
