<%= form_for(@order) do |f| %>
	
	<%= f.label :name, "Name:" %>
	<%= f.text_field :name %><br />

	<%= f.label :bunk, "Bunk:" %>
	<%= f.text_field :bunk %><br />

	<%= f.label :white, "White:" %>
	<%= f.number_field :white, {value: 0, min: 0, step: 1} %><br />

	<%= f.label :orange, "Orange:" %>
	<%= f.number_field :orange, {value: 0, min: 0, step: 1} %><br />

	<%= f.label :blue, "Blue:" %>
	<%= f.number_field :blue, {value: 0, min: 0, step: 1} %><br />

	<%= f.label :paid, "Paid:" %>
	<%= f.check_box :paid, {checked: true} %><br />

	<%= submit_tag %>
<% end %>