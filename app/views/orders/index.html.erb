<div class="center hero-unit">
    <h1>All Orders</h1>
</div>

<table class = "table table-border table-hover">
  <tr>
    <th><%= link_to 'Name', params.merge({action: 'index', sort: 'name', reverse: !(params[:reverse]=="true")}) %></th>
    <th><%= link_to 'Bunk', params.merge({action: 'index', sort: 'bunk', reverse: !(params[:reverse]=="true")}) %></th>
    <th>White</th>
    <th>Orange</th>
    <th>Blue</th>
    <th><%= link_to 'Paid/Due', params.merge({action: 'index', sort: 'paid', reverse: !(params[:reverse]=="true")}) %></th>
    <th><%= link_to 'Received', params.merge({action: 'index', sort: 'received', reverse: !(params[:reverse]=="true")}) %></th>
    <th id = "links"></th>
    <th id = "links"></th>
    <th id = "links"></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.bunk %></td>
    <td><%= order.white %></td>
    <td><%= order.orange %></td>
    <td><%= order.blue %></td>
    <td id = "<%= order.paid ? 'paid' : 'notpaid'%>">
    <%= if order.paid
    "$#{order.price}"
    else
    "Not Paid ($#{order.price})" end%></td>
    <%received_word = order.received ?  "Yes" : 'No'%>
    <%old_params = params || {}%>
    <td><%= link_to received_word, order_path(order, :order => { :received => !order.received}, :old_params => old_params), :method => :put%></td>
    <td><%= link_to 'View', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= button_to "New Order", new_order_path, :class => "btn btn-primary", :method => :get%>